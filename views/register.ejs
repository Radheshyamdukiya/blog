<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #1a1a2e;
            background-image: radial-gradient(circle at 1px 1px, rgba(255, 255, 255, 0.05) 1px, transparent 0);
            background-size: 20px 20px;
            padding: 20px;
            color: #f0f0f0;
        }

        .register-container {
            width: 100%;
            max-width: 450px;
            background: #1e1e2d;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .register-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: conic-gradient(transparent, rgba(168, 85, 247, 0.1), transparent 30%);
            animation: rotate 6s linear infinite;
        }

        @keyframes rotate {
            100% {
                transform: rotate(360deg);
            }
        }

        h1 {
            color: #ffffff;
            margin-bottom: 25px;
            font-weight: 700;
            font-size: 2.2rem;
            text-align: center;
            letter-spacing: 1px;
        }
        
        form {
            position: relative;
            z-index: 2;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="password"] {
            width: 100%;
            padding: 14px 18px;
            margin-bottom: 18px;
            border-radius: 10px;
            border: 1px solid #4a4a58;
            background-color: #161625;
            color: #f0f0f0;
            font-size: 16px;
            transition: box-shadow 0.25s ease, border-color 0.25s ease;
        }

        input::placeholder {
            color: #777;
        }

        input:focus {
            outline: none;
            border-color: #a855f7;
            box-shadow: 0 0 0 3px rgba(168, 85, 247, 0.2);
        }
        
        input:last-of-type {
            margin-bottom: 25px;
        }

        button[type="submit"] {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 10px;
            background: linear-gradient(135deg, #a855f7, #9333ea);
            color: white;
            font-weight: 600;
            font-size: 16px;
            cursor: pointer;
            transition: all .2s ease;
        }
        
        button[type="submit"]:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(147, 51, 234, 0.3);
        }

        button[type="submit"]:active {
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(147, 51, 234, 0.3);
        }

        .bottom-link {
            text-align: center;
            margin-top: 25px;
            font-size: 15px;
            color: #a0a0b0;
            position: relative;
            z-index: 2;
        }

        .bottom-link a {
            color: #a855f7;
            text-decoration: none;
            font-weight: 600;
        }

        .bottom-link a:hover {
            text-decoration: underline;
        }

        @media(max-width: 480px) {
            .register-container {
                padding: 30px 25px;
            }
            h1 {
                font-size: 2rem;
            }
            input[type="text"],
            input[type="email"],
            input[type="tel"],
            input[type="password"] {
                padding: 12px 16px;
                font-size: 15px;
            }
            button[type="submit"] {
                padding: 12px;
                font-size: 15px;
            }
        }
    </style>
</head>
<body>

    <div class="register-container">
        <h1>Create Account</h1>
        <form id="registerForm">
            <input type="text" placeholder="Choose a username" name="username" required>
            <input type="email" placeholder="Enter your email" name="email" required>
            <input type="tel" placeholder="Enter your mobile number" name="mobilenum" required>
            <input type="password" placeholder="Create a password" name="password" required>
            <button type="submit">Register</button>
        </form>
        <p class="bottom-link">Already have an account? <a href="/login">Login here</a></p>
    </div>

    <script>
        const registerForm = document.getElementById('registerForm');

        registerForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = {
                username: registerForm.username.value.trim(),
                email: registerForm.email.value.trim(),
                mobilenum: registerForm.mobilenum.value.trim(),
                password: registerForm.password.value.trim()
            };

            if (!formData.username || !formData.email || !formData.mobilenum || !formData.password) {
                Swal.fire('Error', 'Please fill all fields', 'error');
                return;
            }

            try {
                const res = await fetch('/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                const data = await res.json();

                if (data.success) {
                    Swal.fire('Success', data.message || 'Account created successfully', 'success')
                        .then(() => {
                            window.location.href = '/login';
                        });
                } else {
                    Swal.fire('Error', data.message || 'Registration failed', 'error');
                }

            } catch (err) {
                Swal.fire('Error', 'Server error. Please try again later.', 'error');
                console.error(err);
            }
        });
    </script>
</body>
</html>
