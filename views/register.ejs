<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page | MyBlog</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        :root {
            --bg-dark: #121212;
            --bg-card: #1e1e1e;
            --primary-accent: #a855f7;
            --text-light: #f0f0f0;
            --text-muted: #a0a0b0;
            --border-color: rgba(255, 255, 255, 0.1);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: var(--bg-dark);
            padding: 20px;
            color: var(--text-light);
            overflow: hidden;
        }

        .register-container {
            width: 100%;
            max-width: 450px;
            background: var(--bg-card);
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
            animation: fadeIn 0.5s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .register-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: conic-gradient(transparent, rgba(168, 85, 247, 0.2), transparent 30%);
            animation: rotate 8s linear infinite;
        }

        @keyframes rotate {
            100% { transform: rotate(360deg); }
        }

        h1 {
            color: #ffffff;
            margin-bottom: 25px;
            font-weight: 700;
            font-size: 2.2rem;
            text-align: center;
            letter-spacing: 1px;
        }
        
        form {
            position: relative;
            z-index: 2;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="password"] {
            width: 100%;
            padding: 14px 18px;
            margin-bottom: 18px;
            border-radius: 10px;
            border: 1px solid #4a4a58;
            background-color: var(--bg-dark);
            color: var(--text-light);
            font-size: 16px;
            transition: box-shadow 0.25s ease, border-color 0.25s ease;
        }

        input::placeholder { color: #777; }

        input:focus {
            outline: none;
            border-color: var(--primary-accent);
            box-shadow: 0 0 0 4px rgba(168, 85, 247, 0.2);
        }
        
        input:last-of-type {
            margin-bottom: 25px;
        }

        button[type="submit"] {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 10px;
            background: linear-gradient(135deg, #a855f7, #9333ea);
            color: white;
            font-weight: 600;
            font-size: 16px;
            cursor: pointer;
            transition: all .3s ease;
        }
        
        button[type="submit"]:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(147, 51, 234, 0.3);
        }

        button[type="submit"]:active {
            transform: translateY(-1px);
        }

        .bottom-link {
            text-align: center;
            margin-top: 25px;
            font-size: 15px;
            color: var(--text-muted);
            position: relative;
            z-index: 2;
        }

        .bottom-link a {
            color: var(--primary-accent);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s ease;
        }

        .bottom-link a:hover {
            text-decoration: underline;
            filter: brightness(1.2);
        }

        @media(max-width: 480px) {
            .register-container { padding: 30px 25px; }
            h1 { font-size: 2rem; }
        }
    </style>
</head>
<body>

    <div class="register-container">
        <h1>Join Our Community</h1>
        <form id="registerForm">
            <input type="text" placeholder="Choose a username" name="username" required>
            <input type="email" placeholder="Enter your email" name="email" required>
            <input type="tel" placeholder="Enter your mobile number" name="mobilenum" required>
            <input type="password" placeholder="Create a password" name="password" required>
            <button type="submit">Create Account</button>
        </form>
        <p class="bottom-link">Already have an account? <a href="/login">Login here</a></p>
    </div>

    <script>
        const registerForm = document.getElementById('registerForm');

        const swalDark = {
            background: '#1e1e1e',
            color: '#f0f0f0',
            confirmButtonColor: '#a855f7',
            cancelButtonColor: '#4a4a58'
        };

        registerForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = {
                username: registerForm.username.value.trim(),
                email: registerForm.email.value.trim(),
                mobilenum: registerForm.mobilenum.value.trim(),
                password: registerForm.password.value.trim()
            };

            if (!formData.username || !formData.email || !formData.mobilenum || !formData.password) {
                Swal.fire({ ...swalDark, icon: 'error', title: 'Oops...', text: 'Please fill all fields!' });
                return;
            }

            try {
                const res = await fetch('/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await res.json();

                if (data.success) {
                    Swal.fire({ ...swalDark, icon: 'success', title: 'Success!', text: data.message || 'Account created successfully.' })
                        .then(() => {
                            window.location.href = '/login';
                        });
                } else {
                    Swal.fire({ ...swalDark, icon: 'error', title: 'Registration Failed', text: data.message || 'Please try again.' });
                }

            } catch (err) {
                Swal.fire({ ...swalDark, icon: 'error', title: 'Server Error', text: 'An error occurred. Please try again later.' });
                console.error(err);
            }
        });
    </script>
</body>
</html>

