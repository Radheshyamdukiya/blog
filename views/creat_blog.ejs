<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
  <style>
    *{margin:0;padding:0;box-sizing:border-box;font-family:'Segoe UI',sans-serif;}
    body{background:#f5f6fa;color:#333;line-height:1.6;display:flex;flex-direction:column;min-height:100vh;}
    header{background:#fff;padding:15px 40px;display:flex;justify-content:space-between;align-items:center;box-shadow:0 2px 8px rgba(0,0,0,0.1);position:sticky;top:0;z-index:1000;}
    .logo{font-size:24px;font-weight:bold;color:#0066ff;}
    nav ul{display:flex;list-style:none;gap:25px;}
    nav ul li a{text-decoration:none;color:#333;font-weight:500;transition:0.3s;}
    nav ul li a:hover{color:#0066ff;}
    .container{display:grid;grid-template-columns:250px 1fr;gap:20px;flex:1;padding:30px;}
    .sidebar{background:#fff;padding:20px;border-radius:12px;box-shadow:0 2px 6px rgba(0,0,0,0.1);height:fit-content;}
    .sidebar h3{margin-bottom:15px;color:#0066ff;}
    .sidebar ul{list-style:none;}
    .sidebar ul li{margin:12px 0;}
    .sidebar ul li a{text-decoration:none;color:#444;transition:0.3s;}
    .sidebar ul li a:hover{color:#0066ff;}
    .content{display:flex;justify-content:center;align-items:flex-start;}
    .form-card{background:#fff;padding:35px 30px;border-radius:15px;box-shadow:0 6px 20px rgba(0,0,0,0.15);width:100%;max-width:500px;}
    .form-card h2{text-align:center;margin-bottom:25px;color:#0066ff;font-size:28px;}
    form{display:flex;flex-direction:column;gap:18px;}
    input[type="text"], textarea{padding:12px 15px;border:1px solid #ddd;border-radius:8px;font-size:16px;transition:0.3s;outline:none;width:100%;}
    input[type="text"]:focus, textarea:focus{border-color:#0066ff;box-shadow:0 0 6px rgba(0,102,255,0.3);}
    textarea{min-height:120px;resize:none;}
    .btn{padding:12px;border:none;border-radius:8px;cursor:pointer;font-size:16px;font-weight:500;color:white;transition:0.3s;}
    .btn-submit{background:linear-gradient(135deg,#28a745,#45d67b);}
    .btn-submit:hover{transform:translateY(-2px);box-shadow:0 4px 10px rgba(40,167,69,0.3);}
    .btn-edit{background:linear-gradient(135deg,#ffc107,#ff9800);}
    .btn-edit:hover{transform:translateY(-2px);box-shadow:0 4px 10px rgba(255,193,7,0.3);}
    .btn-delete{background:linear-gradient(135deg,#dc3545,#ff5b5b);}
    .btn-delete:hover{transform:translateY(-2px);box-shadow:0 4px 10px rgba(220,53,69,0.3);}
    .btn-group{display:flex;justify-content:space-between;gap:10px;flex-wrap:wrap;}
    footer{background:#111;color:#eee;text-align:center;padding:20px;margin-top:20px;}
    @media(max-width:900px){.container{grid-template-columns:1fr;}.content{justify-content:center;}}
    @media(max-width:600px){nav ul{display:none;flex-direction:column;background:#fff;position:absolute;top:70px;right:0;width:200px;padding:20px;box-shadow:0 2px 8px rgba(0,0,0,0.1);}.menu-toggle{display:block;cursor:pointer;font-size:22px;}}
    .menu-toggle{display:none;}
  </style>
</head>
<body>

  <header>
    <div class="logo">MyBlog</div>
    <div class="menu-toggle" onclick="toggleMenu()">‚ò∞</div>
    <nav>
      <ul id="menu">
        <li><a href="#">Home</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Blog</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </nav>
  </header>

  <div class="container">
    <aside class="sidebar">
      <h3>Categories</h3>
      <ul>
        <li><a href="#">Tech</a></li>
        <li><a href="#">Travel</a></li>
        <li><a href="#">Lifestyle</a></li>
        <li><a href="#">Education</a></li>
      </ul>
    </aside>

    <main class="content">
      <div class="form-card">
        <h2>Create a Blog</h2>
        <form id="blogForm">
          <input type="text" placeholder="Enter blog title" name="title" required>
          <textarea name="describe" placeholder="Write description here..." required></textarea>
          <button type="submit" class="btn btn-submit">‚úÖ Submit</button>
          
          <div class="btn-group">
            <button type="button" class="btn btn-edit">‚úèÔ∏è Edit</button>
            <button type="button" class="btn btn-delete">üóëÔ∏è Delete</button>
          </div>
        </form>
      </div>
    </main>
  </div>

  <footer>
    <p>&copy; 2025 MyBlog | All Rights Reserved</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    function toggleMenu() {
      document.getElementById("menu").classList.toggle("active");
    }

    const form = document.getElementById("blogForm");
    const userId = '<%= new_user._id %>'; // inject user id from backend

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const title = form.elements['title'].value;
      const describe = form.elements['describe'].value;

      if (!title || !describe) {
        Swal.fire({
          icon: 'warning',
          title: 'Oops!',
          text: 'Please fill out both title and description!',
        });
        return;
      }

      try {
        const res = await fetch(`/creat-blog/${userId}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ title, describe }),
        });

        const data = await res.json();

        if (data.success) {
          Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: data.message,
            timer: 2000,
            showConfirmButton: false
          });
          form.reset();
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error!',
            text: data.message,
          });
        }
      } catch (err) {
        console.log(err);
        Swal.fire({
          icon: 'error',
          title: 'Something went wrong!',
          text: 'Please try again later.',
        });
      }
    });
  </script>
</body>
</html>
