<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Blog</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <style>
        :root {
            --bg-dark: #1a1a2e;
            --bg-card: #1e1e2d;
            --primary-accent: #a855f7;
            --success-color: #22c55e;
            --text-light: #f0f0f0;
            --text-muted: #a0a0b0;
            --border-color: rgba(255, 255, 255, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-light);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        header {
            background: rgba(30, 30, 45, 0.8);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            padding: 15px 5%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--border-color);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .logo {
            font-size: 26px;
            font-weight: 700;
            color: var(--text-light);
            text-decoration: none;
        }

        nav ul {
            display: flex;
            list-style: none;
            gap: 30px;
        }

        nav ul a {
            text-decoration: none;
            color: var(--text-muted);
            font-weight: 500;
            transition: color 0.3s ease;
        }

        nav ul a:hover {
            color: var(--text-light);
        }
        
        .menu-toggle {
            display: none;
            font-size: 30px;
            cursor: pointer;
            background: none;
            border: none;
            color: var(--text-light);
        }

        .container {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 30px;
            max-width: 1400px;
            width: 100%;
            margin: 30px auto;
            padding: 0 5%;
            flex: 1;
        }
        
        .sidebar {
            background: var(--bg-card);
            padding: 25px;
            border-radius: 16px;
            border: 1px solid var(--border-color);
            align-self: start;
            height: fit-content;
        }

        .sidebar h3 {
            margin-bottom: 20px;
            font-weight: 600;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--border-color);
        }
        
        .sidebar ul { list-style: none; }
        .sidebar ul li a {
            text-decoration: none;
            color: var(--text-muted);
            transition: all 0.3s;
            display: block;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 5px;
        }
        .sidebar ul li a:hover {
            color: var(--text-light);
            background-color: rgba(168, 85, 247, 0.1);
            transform: translateX(5px);
        }

        .content {
            display: flex;
            justify-content: center;
            align-items: flex-start;
        }

        .form-card {
            background: var(--bg-card);
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            border: 1px solid var(--border-color);
            width: 100%;
            max-width: 650px;
        }

        .form-card h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.2rem;
            font-weight: 700;
        }

        form { display: flex; flex-direction: column; gap: 20px; }
        
        .input-group { display: flex; flex-direction: column; }
        
        label { margin-bottom: 8px; font-size: 1rem; font-weight: 500; color: var(--text-muted); }

        input[type="text"], textarea {
            width: 100%;
            padding: 14px 18px;
            border-radius: 10px;
            border: 1px solid #4a4a58;
            background-color: #161625;
            color: var(--text-light);
            font-size: 1rem;
            transition: box-shadow 0.25s ease, border-color 0.25s ease;
        }

        input[type="text"]:focus, textarea:focus {
            outline: none;
            border-color: var(--primary-accent);
            box-shadow: 0 0 0 3px rgba(168, 85, 247, 0.2);
        }

        textarea { resize: vertical; min-height: 150px; }

        .btn-submit {
            padding: 15px;
            font-size: 1rem;
            font-weight: 600;
            border: none;
            border-radius: 10px;
            background: linear-gradient(135deg, #22c55e, #16a34a);
            color: white;
            cursor: pointer;
            margin-top: 10px;
            transition: all .2s ease;
        }
        
        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(34, 197, 94, 0.3);
        }

        footer {
            background: #161625;
            color: var(--text-muted);
            text-align: center;
            padding: 25px;
            margin-top: 30px;
            border-top: 1px solid var(--border-color);
        }

        @media(max-width: 900px) {
            .container {
                grid-template-columns: 1fr;
            }
        }
        
        @media(max-width: 768px) {
            nav ul {
                display: none;
                flex-direction: column;
                background: var(--bg-card);
                border: 1px solid var(--border-color);
                position: absolute;
                top: 70px;
                right: 5%;
                width: 250px;
                padding: 20px;
                border-radius: 12px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
                gap: 10px;
            }
            nav ul.active { display: flex; }
            .menu-toggle { display: block; }
        }

    </style>
</head>
<body>

<header>
    <div class="logo">MyBlog</div>
    <div class="menu-toggle" onclick="toggleMenu()">‚ò∞</div>
    <nav>
        <ul id="menu">
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Blog</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </nav>
</header>

<div class="container">
    <aside class="sidebar">
        <h3>Categories</h3>
        <ul>
            <li><a href="#">üöÄ Technology</a></li>
            <li><a href="#">üåø Lifestyle</a></li>
            <li><a href="#">‚úàÔ∏è Travel</a></li>
            <li><a href="#">üçî Food</a></li>
            <li><a href="#">üìö Education</a></li>
        </ul>
    </aside>

    <main class="content">
        <div class="form-card">
            <h2>Create a New Blog</h2>
            <form id="blogForm">
                <div class="input-group">
                    <label for="title">Blog Title</label>
                    <input type="text" id="title" name="title" placeholder="Enter an engaging title" required>
                </div>
                <div class="input-group">
                    <label for="describe">Blog Content</label>
                    <textarea id="describe" name="describe" placeholder="Write your amazing story here..." required></textarea>
                </div>
                <button type="submit" class="btn-submit">‚úÖ Publish Blog</button>
            </form>
        </div>
    </main>
</div>

<footer>
    <p>&copy; 2025 MyBlog | All Rights Reserved</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function toggleMenu() {
        document.getElementById("menu").classList.toggle("active");
    }

    const form = document.getElementById("blogForm");
    const userId = '<%= new_user._id %>';

    form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const title = form.elements['title'].value;
        const describe = form.elements['describe'].value;

        if (!title || !describe) {
            Swal.fire({
                icon: 'warning',
                title: 'Oops!',
                text: 'Please fill out both title and description!',
                background: '#1e1e2d',
                color: '#f0f0f0'
            });
            return;
        }

        try {
            const res = await fetch(`/creat-blog/${userId}`, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ title, describe }),
            });

            const data = await res.json();

            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Published!',
                    text: data.message,
                    timer: 2000,
                    showConfirmButton: false,
                    background: '#1e1e2d',
                    color: '#f0f0f0'
                });
                form.reset();
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: data.message,
                    background: '#1e1e2d',
                    color: '#f0f0f0'
                });
            }
        } catch (err) {
            console.log(err);
            Swal.fire({
                icon: 'error',
                title: 'Something went wrong!',
                text: 'Please try again later.',
                background: '#1e1e2d',
                color: '#f0f0f0'
            });
        }
    });
</script>
</body>
</html>
