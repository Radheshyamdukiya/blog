<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login Page</title>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    :root {
        --bg-dark: #121212;
        --bg-card: #1e1e1e;
        --primary-accent: #a855f7;
        --text-light: #f0f0f0;
        --text-muted: #a0a0b0;
        --border-color: rgba(255, 255, 255, 0.1);
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
    }

    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: var(--bg-dark);
        padding: 20px;
        color: var(--text-light);
        overflow: hidden;
    }

    .login-container {
        width: 100%;
        max-width: 420px;
        background: var(--bg-card);
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
        border: 1px solid var(--border-color);
        position: relative;
        overflow: hidden;
        animation: fadeIn 0.5s ease-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .login-container::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: conic-gradient(transparent, rgba(168, 85, 247, 0.2), transparent 30%);
        animation: rotate 8s linear infinite;
    }

    @keyframes rotate {
        100% { transform: rotate(360deg); }
    }

    .login-container h1 {
        color: #ffffff;
        margin-bottom: 12px;
        font-weight: 700;
        font-size: 2.2rem;
        text-align: center;
        letter-spacing: 1px;
    }

    .login-container h2 {
        color: var(--text-muted);
        margin-bottom: 28px;
        text-align: center;
        font-size: 1rem;
        font-weight: 400;
    }

    form {
        position: relative;
        z-index: 2;
    }

    input[type="email"],
    input[type="password"],
    input[type="text"] {
        width: 100%;
        padding: 14px 18px;
        margin-bottom: 16px;
        border-radius: 10px;
        border: 1px solid #4a4a58;
        background-color: var(--bg-dark);
        color: var(--text-light);
        font-size: 16px;
        transition: box-shadow 0.25s ease, border-color 0.25s ease;
    }

    input::placeholder { color: #777; }

    input:focus {
        outline: none;
        border-color: var(--primary-accent);
        box-shadow: 0 0 0 4px rgba(168, 85, 247, 0.2);
    }

    button {
        width: 100%;
        padding: 14px;
        border: none;
        border-radius: 10px;
        background: linear-gradient(135deg, #a855f7, #9333ea);
        color: white;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        transition: all .3s ease;
        margin-top: 10px;
    }

    button:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(147, 51, 234, 0.3);
    }

    button:active {
        transform: translateY(-1px);
    }

    button[disabled] {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }

    #otpSection {
        display: none;
        margin-bottom: 16px;
    }

    .small-text {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
        color: var(--text-muted);
        position: relative;
        z-index: 2;
    }

    .small-text a {
        color: var(--primary-accent);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s ease;
    }
    .small-text a:hover {
        text-decoration: underline;
        filter: brightness(1.2);
    }

    @media(max-width: 480px) {
        .login-container { padding: 30px; }
        .login-container h1 { font-size: 2rem; }
    }
</style>
</head>
<body>

<div class="login-container">
    <h1>Welcome Back</h1>
    <h2>Sign in to continue</h2>

    <form id="otpLoginForm" autocomplete="off" novalidate>
        <input type="email" name="email" placeholder="Enter your email" required>
        <input type="password" name="password" placeholder="Enter your password" required>

        <div id="otpSection">
            <input type="text" name="otp" placeholder="Enter OTP" required>
        </div>

        <button type="button" id="sendOtpBtn">
            <span id="sendBtnText">Send OTP</span>
            <span id="loader" style="display:none;">‚è≥ Sending...</span>
        </button>

        <button type="submit" id="verifyOtpBtn" style="display:none;">Verify OTP</button>
    </form>

    <p class="small-text">New here? <a href="/register">Create an Account</a></p>
</div>

<script>
const otpForm = document.getElementById('otpLoginForm');
const sendOtpBtn = document.getElementById('sendOtpBtn');
const verifyOtpBtn = document.getElementById('verifyOtpBtn');
const otpSection = document.getElementById('otpSection');
const sendBtnText = document.getElementById('sendBtnText');
const loader = document.getElementById('loader');

const swalDark = {
    background: '#1e1e1e',
    color: '#f0f0f0',
    confirmButtonColor: '#a855f7',
    cancelButtonColor: '#4a4a58'
};

sendOtpBtn.addEventListener('click', async () => {
    const email = otpForm.email.value.trim();
    const password = otpForm.password.value.trim();

    if(!email || !password){
        Swal.fire({ ...swalDark, icon: 'error', title: 'Oops...', text: 'Please enter both email and password!' });
        return;
    }

    try{
        sendBtnText.style.display='none';
        loader.style.display='inline';
        sendOtpBtn.disabled=true;

        const verifyRes = await fetch('/check-user',{
            method:'POST',
            headers:{'Content-Type':'application/json'},
            body:JSON.stringify({email,password})
        });
        const verifyData = await verifyRes.json();

        if(!verifyData.success){
            Swal.fire({ ...swalDark, icon: 'error', title: 'Login Failed', text: verifyData.message || 'User not registered or wrong password' });
            sendBtnText.style.display='inline';
            loader.style.display='none';
            sendOtpBtn.disabled=false;
            return;
        }

        const otpRes = await fetch(`/verify?email=${encodeURIComponent(email)}`);
        const otpData = await otpRes.json();

        if(otpData.success){
            Swal.fire({ ...swalDark, icon: 'success', title: 'OTP Sent!', text: 'Please check your email.' });
            otpSection.style.display='block';
            sendOtpBtn.style.display='none';
            verifyOtpBtn.style.display='block';
        }else{
            Swal.fire({ ...swalDark, icon: 'error', title: 'Failed', text: 'Could not send OTP. Try again later.' });
            sendBtnText.style.display='inline';
            loader.style.display='none';
            sendOtpBtn.disabled=false;
        }

    }catch(err){
        console.error(err);
        Swal.fire({ ...swalDark, icon: 'error', title: 'Server Error', text: 'An error occurred while sending the OTP.' });
        sendBtnText.style.display='inline';
        loader.style.display='none';
        sendOtpBtn.disabled=false;
    }
});

otpForm.addEventListener('submit', async (e)=>{
    e.preventDefault();

    const email = otpForm.email.value.trim();
    const otp = otpForm.otp.value.trim();

    if(!otp){
        Swal.fire({ ...swalDark, icon: 'error', title: 'Oops...', text: 'Please enter the OTP!' });
        return;
    }

    try{
        const res = await fetch('/verify',{
            method:'POST',
            headers:{'Content-Type':'application/json'},
            body:JSON.stringify({email, otp})
        });
        const data = await res.json();

        if(data.success){
            Swal.fire({ ...swalDark, icon: 'success', title: 'Success!', text: 'OTP Verified Successfully!' }).then(()=>{
                window.location.href = data.redirectUrl || '/home';
            });
        }else{
            Swal.fire({ ...swalDark, icon: 'error', title: 'Invalid OTP', text: data.message || 'Please check the OTP and try again.' });
        }

    }catch(err){
        console.error(err);
        Swal.fire({ ...swalDark, icon: 'error', title: 'Server Error', text: 'An error occurred during verification.' });
    }
});
</script>

</body>
</html>

