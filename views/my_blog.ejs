<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Home</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <style>
        :root {
            --bg-dark: #1a1a2e;
            --bg-card: #1e1e2d;
            --primary-accent: #a855f7;
            --text-light: #f0f0f0;
            --text-muted: #a0a0b0;
            --border-color: rgba(255, 255, 255, 0.1);
            --danger-color: #e11d48;
            --warning-color: #f59e0b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-light);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .navbar {
            background: rgba(30, 30, 45, 0.8);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            padding: 15px 5%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--border-color);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar .logo {
            font-size: 26px;
            font-weight: 700;
            color: var(--text-light);
            text-decoration: none;
        }

        .navbar .nav-links {
            display: flex;
            list-style: none;
            gap: 30px;
        }
        
        .navbar .nav-links a {
            text-decoration: none;
            color: var(--text-muted);
            font-weight: 500;
            transition: color 0.3s ease;
            position: relative;
            padding-bottom: 5px;
        }

        .navbar .nav-links a::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background-color: var(--primary-accent);
            transition: width 0.3s ease;
        }

        .navbar .nav-links a:hover {
            color: var(--text-light);
        }
        
        .navbar .nav-links a:hover::after {
            width: 100%;
        }

        .menu-toggle {
            display: none;
            font-size: 30px;
            cursor: pointer;
            background: none;
            border: none;
            color: var(--text-light);
        }

        .container {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 30px;
            max-width: 1400px;
            margin: 30px auto;
            padding: 0 5%;
        }

        .sidebar {
            background: var(--bg-card);
            padding: 25px;
            border-radius: 16px;
            border: 1px solid var(--border-color);
            align-self: start; /* Sticks to the top */
        }

        .sidebar h3 {
            margin-bottom: 20px;
            font-weight: 600;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--border-color);
        }

        .sidebar ul {
            list-style: none;
        }
        
        .sidebar ul li a {
            text-decoration: none;
            color: var(--text-muted);
            transition: all 0.3s;
            font-size: 16px;
            display: block;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 5px;
        }
        
        .sidebar ul li a:hover {
            color: var(--text-light);
            background-color: rgba(168, 85, 247, 0.1);
            transform: translateX(5px);
        }

        .blog-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 30px;
        }

        .blog-card {
            background: var(--bg-card);
            border-radius: 16px;
            padding: 25px;
            border: 1px solid var(--border-color);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .blog-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
        }

        .author-box {
            color: var(--text-muted);
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 15px;
        }
        
        .author-box span {
            color: var(--primary-accent);
            font-weight: 600;
        }

        .blog-card h2 {
            font-size: 1.6rem;
            margin-bottom: 12px;
            color: var(--text-light);
            font-weight: 600;
        }

        .blog-card p {
            color: var(--text-muted);
            font-size: 1rem;
            line-height: 1.7;
            flex-grow: 1; /* Pushes actions to the bottom */
        }

        .blog-actions {
            display: flex;
            gap: 12px;
            margin-top: 25px;
        }

        .blog-actions button {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            color: #fff;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .blog-actions .edit-btn {
            background: var(--warning-color);
        }
        .blog-actions .edit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4);
        }
        .blog-actions .delete-btn {
            background: var(--danger-color);
        }
        .blog-actions .delete-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(225, 29, 72, 0.4);
        }

        @media(max-width: 1024px) {
            .container {
                grid-template-columns: 220px 1fr;
            }
        }

        @media(max-width: 768px) {
            .container {
                grid-template-columns: 1fr;
                padding: 0 5%;
                margin-top: 20px;
            }
            .sidebar {
                margin-bottom: 0;
            }
            .navbar .nav-links {
                display: none;
                flex-direction: column;
                background: var(--bg-card);
                border: 1px solid var(--border-color);
                position: absolute;
                top: 70px;
                right: 5%;
                width: 250px;
                padding: 20px;
                border-radius: 12px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
                gap: 10px;
            }
            .navbar .nav-links.active {
                display: flex;
            }
            .menu-toggle {
                display: block;
            }
        }

        @media(max-width: 480px) {
            .blog-container {
                grid-template-columns: 1fr;
            }
            .blog-card h2 {
                font-size: 1.4rem;
            }
        }
    </style>
</head>
<body>

<header class="navbar">
    <a href="#" class="logo">MyBlog</a>
    <nav>
        <div class="nav-links" id="menu">
            <a href="/home">Home</a>
            <a href="/show-blog">Blogs</a>
            <a href="/about">About</a>
            <a href="/contact">Contact</a>
        </div>
    </nav>
    <button class="menu-toggle" onclick="toggleMenu()">‚ò∞</button>
</header>

<div class="container">
    <aside class="sidebar">
        <h3>Categories</h3>
        <ul>
            <li><a href="#">üöÄ Technology</a></li>
            <li><a href="#">üåø Lifestyle</a></li>
            <li><a href="#">‚úàÔ∏è Travel</a></li>
            <li><a href="#">üçî Food</a></li>
            <li><a href="#">üìö Education</a></li>
        </ul>
    </aside>

    <main class="blog-container">
        <% blogs.forEach(blog => { %>
            <div class="blog-card">
                <div class="author-box">
                    By <span><%= blog.username %></span>
                </div>
                <h2><%= blog.title %></h2>
                <p><%= blog.describe %></p>
                <div class="blog-actions">
                    <form action="/edit-blog/<%= blog._id %>" method="GET" style="display:inline;">
                        <button type="submit" class="edit-btn">‚úèÔ∏è Edit</button>
                    </form>
                    <form class="delete-form" action="/delete-blog/<%= blog._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="delete-btn">üóëÔ∏è Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function toggleMenu() {
        document.getElementById("menu").classList.toggle("active");
    }

    document.querySelectorAll(".delete-form").forEach((form) => {
        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            
            const result = await Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!",
                background: '#1e1e2d',
                color: '#f0f0f0'
            });

            if (result.isConfirmed) {
                try {
                    const res = await fetch(form.action, {
                        method: "POST",
                    });
                    const data = await res.json();

                    if (data.success) {
                        Swal.fire({
                            icon: "success",
                            title: "Deleted!",
                            text: "Your blog post has been deleted.",
                            showConfirmButton: false,
                            timer: 1500,
                            background: '#1e1e2d',
                            color: '#f0f0f0'
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Something went wrong!",
                            background: '#1e1e2d',
                            color: '#f0f0f0'
                        });
                    }
                } catch (error) {
                     Swal.fire({
                        icon: "error",
                        title: "Server Error",
                        text: "Could not connect to the server.",
                        background: '#1e1e2d',
                        color: '#f0f0f0'
                    });
                }
            }
        });
    });
</script>

</body>
</html>
