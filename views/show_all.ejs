<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Blog Home</title>
<style>
  * {margin:0; padding:0; box-sizing:border-box; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;}

  body {background:#f5f7fa; color:#333;}

  /* Navbar */
  .navbar {
    background:linear-gradient(90deg,#3498db,#6a11cb);
    padding:15px 30px;
    display:flex;
    justify-content:space-between;
    align-items:center;
    box-shadow:0 4px 15px rgba(0,0,0,0.1);
    position:sticky;
    top:0;
    z-index:100;
  }

  .navbar .logo { font-size:1.8rem; font-weight:bold; color:#fff; }
  .navbar .nav-links a { margin-left:20px; text-decoration:none; color:#fff; font-weight:500; transition:0.3s; }
  .navbar .nav-links a:hover { color:#ffdd59; }

  /* Layout */
  .container {
    display:grid;
    grid-template-columns:250px 1fr;
    gap:20px;
    max-width:1200px;
    margin:20px auto;
    padding:0 20px;
  }

  /* Sidebar */
  .sidebar {
    background:#fff;
    border-radius:12px;
    padding:20px;
    box-shadow:0 6px 18px rgba(0,0,0,0.08);
  }
  .sidebar h3 { margin-bottom:15px; color:#6a11cb; font-weight:bold; }
  .sidebar ul { list-style:none; }
  .sidebar ul li { margin-bottom:12px; }
  .sidebar ul li a { text-decoration:none; color:#555; transition:0.3s; }
  .sidebar ul li a:hover { color:#6a11cb; }

  /* Blog container */
  .blog-container {
    display:grid;
    grid-template-columns: repeat(auto-fit, minmax(300px,1fr));
    gap:30px;
  }

  /* Blog card */
  .blog-card {
    position:relative;
    background:#fff;
    border-radius:15px;
    padding:25px;
    box-shadow:0 8px 25px rgba(0,0,0,0.08);
    transition:0.3s;
    display:flex;
    flex-direction:column;
  }

  .blog-card:hover { transform: translateY(-7px); box-shadow:0 12px 35px rgba(0,0,0,0.15); }

  /* Author box on top */
  .author-box {
    position:absolute;
    top:-18px;
    left:20px;
    background:linear-gradient(135deg,#ff6a00,#ee0979);
    color:#fff;
    padding:6px 14px;
    border-radius:10px;
    display:flex;
    align-items:center;
    gap:10px;
    font-size:0.9rem;
    font-weight:600;
    box-shadow:0 2px 8px rgba(0,0,0,0.2);
  }

  .author-box img {
    width:32px;
    height:32px;
    border-radius:50%;
    object-fit:cover;
    border:2px solid #fff;
  }

  .blog-card h2 { margin-top:30px; font-size:1.5rem; margin-bottom:14px; color:#2c3e50; }
  .blog-card p { color:#555; font-size:1rem; line-height:1.6; }

  /* Responsive */
  @media(max-width:1024px){ .container { grid-template-columns:200px 1fr; } }
  @media(max-width:768px){ .container { grid-template-columns:1fr; padding:0 10px; } .sidebar { margin-bottom:20px; } }
  @media(max-width:480px){
    .navbar { flex-direction:column; align-items:flex-start; }
    .navbar .nav-links { margin-top:10px; }
    .author-box { position:static; margin-bottom:12px; }
  }
</style>
</head>
<body>

<!-- Navbar -->
<div class="navbar">
  <div class="logo">MyBlog</div>
  <div class="nav-links">
<a href="/home">Home</a>
    <a href="/show-blog">Blogs</a>
    <a href="/about">About</a>
    <a href="/contact">Contact</a>
  </div>
</div>

<div class="container">
  <!-- Sidebar -->
  <div class="sidebar">
    <h3>Categories</h3>
    <ul>
      <li><a href="#">Technology</a></li>
      <li><a href="#">Lifestyle</a></li>
      <li><a href="#">Travel</a></li>
      <li><a href="#">Food</a></li>
      <li><a href="#">Education</a></li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="blog-container">
    <% blogs.forEach(blog => { %>
      <div class="blog-card">
        <div class="author-box">
         
          <span><%= blog.username %></span>
        </div>
        <h2><%= blog.title %></h2>
        <p><%= blog.describe %></p>
      </div>
    <% }) %>
  </div>
</div>

</body>
</html>
